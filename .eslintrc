{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-plusplus": [0], 
    "class-methods-use-this": [0], 
    "react/forbid-prop-types": [1, { "forbid": ["any"] }]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "fetch": true
  }
}
